---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Soldadura Subacuática Profesional en Cádiz | Técnicas Avanzadas Submarinas"
  description="Especialistas en soldadura subacuática certificada en Cádiz. Técnicas húmedas y secas, reparación de cascos, estructuras offshore y trabajos marítimos profesionales 24/7."
  keywords="soldadura subacuática Cádiz, soldadura hiperbárica, soldadura marina, reparación naval submarina, soldadura offshore Cádiz"
>
  <!-- Specific Service Schema for Underwater Welding -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Service",
      "@id": "https://trabajos-subacuaticos-cadiz.vercel.app/soldadura-subacuatica#service",
      "name": "Soldadura Subacuática Profesional",
      "alternateName": ["Soldadura Hiperbárica", "Soldadura Marina", "Soldadura Submarina"],
      "description": "Servicios especializados de soldadura subacuática con técnicas húmedas y secas. Soldadura hiperbárica certificada para reparación de cascos, estructuras portuarias y trabajos offshore en Cádiz.",
      "url": "https://trabajos-subacuaticos-cadiz.vercel.app/soldadura-subacuatica",
      "provider": {
        "@type": "LocalBusiness",
        "name": "Trabajos Subacuáticos Cádiz",
        "@id": "https://trabajos-subacuaticos-cadiz.vercel.app/#organization"
      },
      "serviceType": "Underwater Welding",
      "category": ["Marine Welding", "Hyperbaric Welding", "Underwater Construction"],
      "serviceArea": {
        "@type": "GeoCircle",
        "geoMidpoint": {
          "@type": "GeoCoordinates",
          "latitude": "36.5297",
          "longitude": "-6.2921"
        },
        "geoRadius": "50000"
      },
      "availableChannel": [
        {
          "@type": "ServiceChannel",
          "serviceUrl": "https://trabajos-subacuaticos-cadiz.vercel.app/contacto",
          "serviceName": "Consulta y Presupuesto",
          "availableLanguage": "es"
        },
        {
          "@type": "ServiceChannel",
          "servicePhone": "+34-XXX-XXX-XXX",
          "serviceName": "Emergencias 24h",
          "hoursAvailable": "24/7"
        }
      ],
      "offers": [
        {
          "@type": "Offer",
          "name": "Soldadura Húmeda Subacuática",
          "description": "Soldadura directa bajo el agua utilizando electrodos especiales resistentes al agua",
          "category": "Wet Underwater Welding"
        },
        {
          "@type": "Offer",
          "name": "Soldadura Seca Hiperbárica",
          "description": "Soldadura en cámara seca bajo presión para máxima calidad en trabajos estructurales críticos",
          "category": "Dry Hyperbaric Welding"
        },
        {
          "@type": "Offer",
          "name": "Soldadura TIG Submarina",
          "description": "Soldadura TIG especializada para trabajos de precisión bajo el agua",
          "category": "Underwater TIG Welding"
        },
        {
          "@type": "Offer",
          "name": "Soldadura MIG Submarina",
          "description": "Soldadura MIG para trabajos de alta productividad en ambiente submarino",
          "category": "Underwater MIG Welding"
        }
      ],
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Aplicaciones de Soldadura Subacuática",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Reparación de Cascos de Embarcaciones",
              "description": "Soldadura de reparación en cascos sin necesidad de varada"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Reparación de Infraestructura Portuaria",
              "description": "Soldadura en muelles, pilotes y estructuras de puerto"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Trabajos Offshore",
              "description": "Soldadura en plataformas petrolíferas y parques eólicos marinos"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Emergencias Marítimas",
              "description": "Reparaciones críticas y sellado de fisuras de emergencia"
            }
          }
        ]
      },
      "additionalProperty": [
        {
          "@type": "PropertyValue",
          "name": "Certificación AWS D3.6",
          "value": "American Welding Society D3.6 Underwater Welding Specification"
        },
        {
          "@type": "PropertyValue",
          "name": "Certificación EN ISO 15618",
          "value": "European Standard for Underwater Welding Qualification"
        },
        {
          "@type": "PropertyValue",
          "name": "Profundidad Máxima",
          "value": "30 metros"
        },
        {
          "@type": "PropertyValue",
          "name": "Tiempo de Respuesta Emergencia",
          "value": "< 2 horas"
        }
      ]
    }
  </script>

  <!-- Breadcrumb Navigation Schema -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Inicio",
          "item": "https://trabajos-subacuaticos-cadiz.vercel.app/"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Servicios",
          "item": "https://trabajos-subacuaticos-cadiz.vercel.app/servicios"
        },
        {
          "@type": "ListItem",
          "position": 3,
          "name": "Soldadura Subacuática",
          "item": "https://trabajos-subacuaticos-cadiz.vercel.app/soldadura-subacuatica"
        }
      ]
    }
  </script>

  <Header />

  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-blue-900 via-blue-800 to-blue-900 text-white py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">
            Soldadura Subacuática Profesional
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-blue-100">
            Técnicas avanzadas de soldadura marina en Cádiz
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contacto" class="bg-red-600 hover:bg-red-700 px-8 py-3 rounded-lg font-semibold transition-colors">
              Solicitar Presupuesto
            </a>
            <a href="tel:+34XXXXXXXXX" class="bg-transparent border-2 border-white hover:bg-white hover:text-blue-900 px-8 py-3 rounded-lg font-semibold transition-colors">
              Llamar Ahora: +34 XXX XXX XXX
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Técnicas de Soldadura -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">Técnicas de Soldadura Subacuática</h2>

          <div class="grid md:grid-cols-2 gap-8">
            <!-- Soldadura Húmeda -->
            <div class="bg-blue-50 p-8 rounded-lg">
              <div class="flex items-center mb-4">
                <div class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center mr-4">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
                  </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-800">Soldadura Húmeda</h3>
              </div>
              <p class="text-gray-600 mb-4">
                Soldadura directa bajo el agua utilizando electrodos especiales resistentes al agua. Ideal para reparaciones de emergencia y trabajos temporales.
              </p>
              <ul class="text-gray-600 space-y-2">
                <li>• Reparaciones de emergencia</li>
                <li>• Soldadura de acero al carbono</li>
                <li>• Profundidades hasta 30 metros</li>
                <li>• Respuesta rápida 24/7</li>
              </ul>
            </div>

            <!-- Soldadura Seca -->
            <div class="bg-green-50 p-8 rounded-lg">
              <div class="flex items-center mb-4">
                <div class="w-12 h-12 bg-green-600 rounded-full flex items-center justify-center mr-4">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-800">Soldadura Seca (Hiperbárica)</h3>
              </div>
              <p class="text-gray-600 mb-4">
                Soldadura en cámara seca bajo presión, ofreciendo la máxima calidad y resistencia para trabajos estructurales críticos.
              </p>
              <ul class="text-gray-600 space-y-2">
                <li>• Máxima calidad de soldadura</li>
                <li>• Estructuras críticas</li>
                <li>• Certificaciones internacionales</li>
                <li>• Control de calidad estricto</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Aplicaciones -->
    <section class="py-16 bg-gray-100">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">Aplicaciones de Soldadura Subacuática</h2>

          <div class="grid md:grid-cols-3 gap-6">
            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-lg font-bold mb-3 text-blue-900">Reparación Naval</h3>
              <p class="text-gray-600 text-sm">
                Soldadura de cascos, hélices, timones y estructuras navales sin necesidad de varada.
                <a href="/servicios#reparacion-naval" class="text-blue-600 hover:text-blue-800 font-medium">
                  Ver detalles de reparación naval
                </a>.
              </p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-lg font-bold mb-3 text-blue-900">Infraestructura Portuaria</h3>
              <p class="text-gray-600 text-sm">
                Reparación de muelles, pilotes, estructuras de hormigón y acero en puerto.
              </p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-lg font-bold mb-3 text-blue-900">Instalaciones Offshore</h3>
              <p class="text-gray-600 text-sm">
                Soldadura en plataformas petrolíferas, parques eólicos marinos y estructuras submarinas.
              </p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-lg font-bold mb-3 text-blue-900">Emergencias Marítimas</h3>
              <p class="text-gray-600 text-sm">
                Respuesta inmediata para reparaciones críticas y sellado de fisuras.
                <a href="/emergencias" class="text-red-600 hover:text-red-800 font-medium">
                  Servicio de emergencias 24h
                </a>.
              </p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-lg font-bold mb-3 text-blue-900">Acuicultura</h3>
              <p class="text-gray-600 text-sm">
                Mantenimiento de jaulas, estructuras de cultivo marino y sistemas de fondeo.
              </p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-lg font-bold mb-3 text-blue-900">Obras Civiles</h3>
              <p class="text-gray-600 text-sm">
                Soldadura en puentes, presas, canalizaciones y estructuras submarinas.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Certificaciones y Calidad -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-8 text-gray-800">Certificaciones y Calidad</h2>

          <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-blue-50 p-6 rounded-lg">
              <h3 class="text-xl font-bold mb-4 text-blue-900">Normativas Internacionales</h3>
              <ul class="text-gray-600 space-y-2">
                <li>• AWS D3.6 (American Welding Society)</li>
                <li>• EN ISO 15618 (Soldadura Subacuática)</li>
                <li>• DNV GL Standards</li>
                <li>• Lloyd's Register Certification</li>
              </ul>
            </div>

            <div class="bg-green-50 p-6 rounded-lg">
              <h3 class="text-xl font-bold mb-4 text-green-900">Control de Calidad</h3>
              <ul class="text-gray-600 space-y-2 mb-4">
                <li>• Inspección visual submarina</li>
                <li>• Ensayos no destructivos (END)</li>
                <li>• Documentación completa</li>
                <li>• Certificados de calidad</li>
              </ul>
              <div class="mt-4 p-3 bg-green-50 rounded">
                <p class="text-sm text-green-800">
                  <strong>Servicios complementarios:</strong>
                  <a href="/servicios#inspeccion-cascos" class="text-green-600 hover:text-green-800 hover:underline">Inspección de cascos</a> •
                  <a href="/servicios#buceo-industrial" class="text-green-600 hover:text-green-800 hover:underline">Buceo industrial</a> •
                  <a href="/servicios" class="text-green-600 hover:text-green-800 hover:underline">Ver todos los servicios</a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-blue-900 text-white">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold mb-6">¿Necesita Soldadura Subacuática Profesional?</h2>
        <p class="text-xl mb-8 text-blue-100">
          Contacte con nuestros especialistas para una evaluación gratuita
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contacto" class="bg-red-600 hover:bg-red-700 px-8 py-3 rounded-lg font-semibold transition-colors">
            Solicitar Presupuesto
          </a>
          <a href="/emergencias" class="bg-transparent border-2 border-white hover:bg-white hover:text-blue-900 px-8 py-3 rounded-lg font-semibold transition-colors">
            Emergencias 24h
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  /* Animaciones y estilos adicionales */
  .container {
    max-width: 1200px;
  }

  .shadow-md {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }
</style>