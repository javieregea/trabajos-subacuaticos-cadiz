---
/**
 * Cookie Consent Banner
 * Cumple con RGPD/GDPR con opciones de aceptar/rechazar
 */
---

<div id="cookie-consent" class="cookie-consent hidden">
  <div class="cookie-consent-content">
    <div class="cookie-text">
      <h3>üç™ Cookies</h3>
      <p>
        Usamos cookies para mejorar tu experiencia. Al aceptar, nos ayudas a mejorar nuestros servicios.
        <a href="/politica-privacidad" class="cookie-link">M√°s info</a>
      </p>
    </div>
    <div class="cookie-buttons">
      <button id="accept-cookies" class="btn-accept">Aceptar</button>
      <button id="reject-cookies" class="btn-reject">Rechazar</button>
    </div>
  </div>
</div>

<script>
  // Cookie consent functionality
  const COOKIE_NAME = 'cookie-consent';
  const COOKIE_DURATION = 365; // d√≠as

  function setCookie(name: string, value: string, days: number) {
    const expires = new Date();
    expires.setTime(expires.getTime() + days * 24 * 60 * 60 * 1000);
    document.cookie = `${name}=${value};expires=${expires.toUTCString()};path=/;SameSite=Lax`;
  }

  function getCookie(name: string): string | null {
    const nameEQ = name + '=';
    const ca = document.cookie.split(';');
    for (let i = 0; i < ca.length; i++) {
      let c = ca[i];
      while (c.charAt(0) === ' ') c = c.substring(1, c.length);
      if (c.indexOf(nameEQ) === 0) return c.substring(nameEQ.length, c.length);
    }
    return null;
  }

  function showCookieBanner() {
    const banner = document.getElementById('cookie-consent');
    if (banner) {
      banner.classList.remove('hidden');
      banner.classList.add('show');
    }
  }

  function hideCookieBanner() {
    const banner = document.getElementById('cookie-consent');
    if (banner) {
      banner.classList.remove('show');
      banner.classList.add('hidden');
    }
  }

  function acceptCookies() {
    setCookie(COOKIE_NAME, 'accepted', COOKIE_DURATION);
    hideCookieBanner();

    // Aqu√≠ puedes activar Google Analytics, etc.
    if (typeof gtag !== 'undefined') {
      gtag('consent', 'update', {
        'analytics_storage': 'granted'
      });
    }
  }

  function rejectCookies() {
    setCookie(COOKIE_NAME, 'rejected', COOKIE_DURATION);
    hideCookieBanner();

    // Desactivar analytics
    if (typeof gtag !== 'undefined') {
      gtag('consent', 'update', {
        'analytics_storage': 'denied'
      });
    }
  }

  // Inicializar
  document.addEventListener('DOMContentLoaded', () => {
    const consent = getCookie(COOKIE_NAME);

    if (!consent) {
      // Mostrar banner despu√©s de 1 segundo
      setTimeout(showCookieBanner, 1000);
    }

    // Event listeners
    const acceptBtn = document.getElementById('accept-cookies');
    const rejectBtn = document.getElementById('reject-cookies');

    if (acceptBtn) {
      acceptBtn.addEventListener('click', acceptCookies);
    }

    if (rejectBtn) {
      rejectBtn.addEventListener('click', rejectCookies);
    }
  });
</script>

<style>
  .cookie-consent {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(30, 58, 138, 0.98);
    backdrop-filter: blur(10px);
    color: white;
    padding: 1rem;
    box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.3);
    z-index: 9999;
    transform: translateY(100%);
    transition: transform 0.3s ease-in-out;
  }

  .cookie-consent.show {
    transform: translateY(0);
  }

  .cookie-consent.hidden {
    display: block;
  }

  .cookie-consent-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .cookie-text {
    flex: 1;
    min-width: 250px;
  }

  .cookie-text h3 {
    font-size: 1.125rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
  }

  .cookie-text p {
    margin: 0;
    font-size: 0.875rem;
    line-height: 1.5;
    color: #e0e7ff;
  }

  .cookie-link {
    color: #fbbf24;
    text-decoration: underline;
    font-weight: 600;
  }

  .cookie-link:hover {
    color: #f59e0b;
  }

  .cookie-buttons {
    display: flex;
    gap: 0.75rem;
    flex-shrink: 0;
  }

  .cookie-buttons button {
    padding: 0.625rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 600;
    font-size: 0.875rem;
    border: none;
    cursor: pointer;
    transition: all 0.2s;
    white-space: nowrap;
  }

  .btn-accept {
    background: #10b981;
    color: white;
  }

  .btn-accept:hover {
    background: #059669;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.4);
  }

  .btn-reject {
    background: transparent;
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.3);
  }

  .btn-reject:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.5);
  }

  /* Mobile responsive */
  @media (max-width: 640px) {
    .cookie-consent {
      padding: 1rem 0.75rem;
    }

    .cookie-consent-content {
      flex-direction: column;
      align-items: stretch;
      gap: 1rem;
    }

    .cookie-text h3 {
      font-size: 1rem;
    }

    .cookie-text p {
      font-size: 0.8125rem;
    }

    .cookie-buttons {
      width: 100%;
      flex-direction: column;
    }

    .cookie-buttons button {
      width: 100%;
      padding: 0.75rem 1rem;
    }
  }

  @media (max-width: 768px) {
    .cookie-consent-content {
      gap: 1rem;
    }

    .cookie-buttons {
      width: 100%;
      justify-content: stretch;
    }

    .cookie-buttons button {
      flex: 1;
    }
  }
</style>
