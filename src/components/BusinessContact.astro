      <div>
        <p class="font-semibold">{businessInfo.address.street}</p>
        <p class="text-sm text-blue-200">{businessInfo.address.city}, {businessInfo.address.province} {businessInfo.address.postalCode}</p>
        <p class="text-sm text-blue-200">{businessInfo.address.region}, {businessInfo.address.country}</p>
      </div>
    </div>
  </div>

  <div class="mt-4 pt-4 border-t border-blue-700">
    <p class="text-sm text-blue-200">
      <span class="font-semibold">Horario:</span> {businessInfo.workingHours.regular}
    </p>
    <p class="text-sm text-blue-200">
      <span class="font-semibold">Emergencias:</span> {businessInfo.workingHours.emergency}
    </p>
  </div>
</div>