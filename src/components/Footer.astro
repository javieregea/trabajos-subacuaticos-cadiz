---
// Footer component
import AnchorLogo from './AnchorLogo.astro';
---

<footer class="bg-gray-900 text-white">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="col-span-1 md:col-span-2">
        <div class="flex items-center mb-4">
          <AnchorLogo size="md" color="white" variant="outline" className="mr-3" />
          <h3 class="text-xl font-bold">Trabajos Subacuáticos Cádiz</h3>
        </div>
        <p class="text-gray-300 mb-4">
          Especialistas en soldadura subacuática, buceo industrial y servicios marítimos profesionales.
          Disponibles 24/7 para emergencias en la bahía de Cádiz y el Estrecho de Gibraltar.
        </p>
        <div class="flex space-x-4">
          <div class="flex items-center text-sm text-gray-300">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Certificados Lloyd's Register
          </div>
          <div class="flex items-center text-sm text-gray-300">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Servicio 24/7
          </div>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h4 class="font-semibold mb-4">Servicios</h4>
        <ul class="space-y-2 text-sm text-gray-300">
          <li><a href="/soldadura-subacuatica" class="hover:text-white transition-colors">Soldadura Subacuática</a></li>
          <li><a href="/inspeccion-cascos" class="hover:text-white transition-colors">Inspección de Cascos</a></li>
          <li><a href="/reparacion-naval" class="hover:text-white transition-colors">Reparación Naval</a></li>
          <li><a href="/servicios#buceo-industrial" class="hover:text-white transition-colors">Buceo Industrial</a></li>
          <li><a href="/emergencias" class="hover:text-white transition-colors">Emergencias 24h</a></li>
        </ul>
        <h4 class="font-semibold mb-2 mt-4">Puertos Industriales</h4>
        <ul class="space-y-1 text-sm text-gray-300">
          <li><a href="/puerto-algeciras" class="hover:text-white transition-colors">Puerto de Algeciras</a></li>
          <li><a href="/cadiz" class="hover:text-white transition-colors">Puerto de Cádiz</a></li>
          <li><a href="/contacto" class="hover:text-white transition-colors">Contacto</a></li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-semibold mb-4">Contacto</h4>
        <div class="space-y-3 text-sm text-gray-300">
          <div class="flex items-start">
            <svg class="w-4 h-4 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
            </svg>
            <div>
              <div class="font-medium">Puerto de Cádiz</div>
              <div>Andalucía, España</div>
            </div>
          </div>

          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
            </svg>
            <div>
              <div class="font-medium text-red-400">+34 614 405 061</div>
              <div class="text-xs">Emergencias 24h</div>
            </div>
          </div>

          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
            </svg>
            info@trabajossubacuaticoscadiz.com
          </div>
        </div>
      </div>
    </div>

    <!-- Separador con ancla -->
    <div class="flex justify-center mt-8 mb-6">
      <AnchorLogo size="sm" color="#6b7280" variant="outline" />
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 pt-8 text-center text-sm text-gray-400">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="flex items-center">
          <AnchorLogo size="sm" color="#6b7280" variant="filled" className="mr-2" />
          <p>&copy; 2024 Trabajos Subacuáticos Cádiz. Todos los derechos reservados.</p>
        </div>
        <div class="flex space-x-4 mt-2 md:mt-0">
          <a href="/politica-privacidad" class="hover:text-white">Política de Privacidad</a>
          <a href="/terminos" class="hover:text-white">Términos de Servicio</a>
        </div>
      </div>
    </div>
  </div>
</footer>